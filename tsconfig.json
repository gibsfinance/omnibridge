{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "resolvePackageJsonImports": true
  }
}
