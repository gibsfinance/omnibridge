{
  "name": "omnibridge",
  "version": "1.1.0",
  "description": "Omnibridge AMB extension",
  "main": "index.js",
  "scripts": {
    "copy-precompiled:template": "mkdir -p artifacts/contracts/precompiled/$NAME.sol/ && cp precompiled/$NAME.json artifacts/contracts/precompiled/$NAME.sol/$NAME.json",
    "copy-precompiled:permittable": "NAME=PermittableToken npm run copy-precompiled:template",
    "copy-precompiled:erc677": "NAME=ERC677BridgeToken npm run copy-precompiled:template",
    "copy-precompiled": "npm run copy-precompiled:erc677 && npm run copy-precompiled:permittable",
    "create-precompiled-types": "ts-node ./node_modules/.bin/typechain --target=ethers-v6 --glob=./precompiled/**/*.json --out-dir=./artifacts/types/contracts/precompiled",
    "test": "hardhat test",
    "docker:test": "test/test.sh",
    "coverage": "SOLIDITY_COVERAGE=true npm run test",
    "compile": "ts-node ./node_modules/.bin/hardhat compile && npm run copy-precompiled && npm run create-precompiled-types",
    "flatten": "bash flatten.sh 2>/dev/null",
    "lint": "npm run compile && npm run lint:js && npm run lint:sol",
    "lint:js": "eslint \"./test/**/*.ts\"",
    "lint:js:fix": "eslint \"./test/**/*.ts\" --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:prettier:fix": "prettier --write \"contracts/**/*.sol\"",
    "deploy": "node deploy/deploy.js",
    "e2e-tests:local": "./e2e-tests/run-tests.sh local",
    "e2e-tests:public": "./e2e-tests/run-tests.sh"
  },
  "dependencies": {
    "@nomicfoundation/ethereumjs-util": "^9.0.4",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@nomicfoundation/solidity-analyzer": "^0.1.1",
    "@openzeppelin/contracts": "^5.0.2",
    "@solidstate/hardhat-4byte-uploader": "^1.2.2",
    "axios": "^1.6.8",
    "bignumber.js": "^9.0.1",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.2",
    "ethers": "^6.12.0",
    "promise-retry": "^2.0.1",
    "querystring": "^0.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bn": "^0.2.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^10.4.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "ethereumjs-util": "5.2.0",
    "globals": "^15.1.0",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solc": "^0.8.24",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "POA Network",
  "license": "GPL-3.0"
}
